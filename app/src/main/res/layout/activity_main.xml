                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#85ADFF"
                />
            <TextView
                android:id="@+id/act1"
                android:layout_width="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#85ADFF"
                android:lines="2"
                />

        </TableRow>
        <TableRow
