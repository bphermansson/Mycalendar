<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".Main">

    <TextView
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWeek"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWeek"
        android:background="#85ADFF"
        android:id="@+id/curinfo"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrev"
        android:layout_toRightOf="@id/txtWeek"
        android:src="@drawable/ic_action_previous_item"
        android:onClick="prevweek"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:src="@drawable/ic_action_next_item"
        android:onClick="nextweek"
        android:layout_toRightOf="@id/btnPrev"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/curinfo"
        android:background="#85ADFF"
        android:id="@+id/monday"
        android:text="MÃ¥ndag"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monday"
        android:background="#85ADFF"
        android:id="@+id/mondayinfo"
        />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/mondayinfo">
        <!-- 2 columns -->
        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/textView0"
                android:layout_width="fill_parent"
                android:text="Row 0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#85ADFF"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/date0"
                android:layout_width="fill_parent"
                android:text="Date 0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#85ADFF"
                />
            <TextView
                android:id="@+id/act0"
                android:layout_width="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#85ADFF"
                android:lines="2"
                />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
